@using HairSalon.Models;
<h1>List of Clients</h1>
<ul>
  @if (Model.Count == 0)
  {
    <p>Chose a option to continue</p>
  } else
  {
    @foreach(var client in Model)
    {
      <li><a href="/clis/@client.GetId()/info">@client.GetName()</a>| <a href="/clis/@client.GetId()/delete">Delete</a>| <a href="/clis/@client.GetId()/update">Edit</a></li>
    }
  }
</ul>
<p><a href="/">Go Home</a></p>
<p><a href='/clis/new'>Create a New Client Here<a/></p>
